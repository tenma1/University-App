<% gallery.images.each do |img| %>
    <% if img.representable? %>
      <%= image_tag img.representation(resize_to_limit: [150, 150]) %>
    <% else %>
      <%= link_to rails_blob_path(img, disposition: "attachment") do %>
        <%= image_tag img, alt: "Download image" %>
      <% end %>
    <% end %>
<% end %>
