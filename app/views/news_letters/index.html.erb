<h2>News</h2>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item">
      <img class="d-block w-100 h-50" src="<%= image_path("college_student1.jpg")%>" alt="First slide">
    </div>
    <div class="carousel-item active">
      <img class="d-block w-100" src="<%= image_path("college_students2.jpeg")%>" alt="Second slide">
    </div>

    <div class="card-deck row">
      <% @all_letters.each do |letter| %>
        <%#= link_to letter.name, letter %>
        <div class="card bg-light text-dark mb-1" style="width: 18rem; margin: 2%">

          <img src="<%= image_path("letter_card.jpeg")%>" class="card-img" alt="Card image">
          
          <div class="card-block">
            <div class="card-header">
              <h5 class="card-title"><%= letter.title %></h5>
            <% letter.colleges.each do|college| %>
              <h6 class="card-subtitle mb-2 text-muted" %><a href= '<%= college_path(college.id) %>' ><%= college.name %></a></h6>
            <% end %>

            <% letter.schools.each do|school| %>
              <h6 class="card-subtitle mb-2 text-muted" %><a href= '<%= school_path(school.id) %>' ><%= school.name %></a></h6>
            <% end %>

            <% letter.hostels.each do|hostel| %>
              <h6 class="card-subtitle mb-2 text-muted" %><a href= '<%= hostel_path(hostel.id) %>' ><%= hostel.name %></a></h6>
            <% end %>

            </div>
            <div class="card-text">
              <p class="card-text"><%= letter.brief_info %></p>
            </div>

            <div class="card-footer text-muted">
              <a href='<%= news_letter_path(letter.id) %>'>More Info</a>
            </div> 
          </div>

        </div>
      <% end%> 
    </div>

  </div>
</div>
