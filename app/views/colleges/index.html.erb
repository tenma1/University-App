<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">

    <div class="carousel-item">
      <img class="d-block w-100 h-50" src="<%= image_path("college_student1.jpg")%>" alt="First slide">
    </div>
    <div class="carousel-item active">
      <img class="d-block w-100" src="<%= image_path("college_students2.jpeg")%>" alt="Second slide">
    </div>

    <div class="card-deck row">
      <%#= link_to @college.name, college %>
      <% @colleges.each do |college| %>
        <div class="card bg-dark text-success mb-1" style="width: 18rem; margin: 2%">
          <img src="<%= image_path("Hogwarts_Logo.jpg")%>" class="card-img" alt="Card image">
          <div class="card-img-overlay">
            <div class="card-block">
            <div class="card-header">
              <h5 class="card-title"><%=college.name%></h5>
            </div>
            <div class="card-text">
              <h6 class="card-subtitle mb-2 text-muted"><%=college.discipline%></h6>
              <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
            <div class="card-footer text-muted">
              <a href='<%= college_path(college.id)%>' class="card-link">More Info</a>
            </div>
          </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>

