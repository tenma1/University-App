
<% if @exam_results.blank? %>
  <%= image_tag image_path("no_results.jpeg")%>
<% else %>
  <% @exam_results.each do |result| %>
    <% if result.representable? %>
      <%= image_tag result.representation(resize_to_limit: [720, 540]) %>
    <% else %>
      <%= link_to rails_blob_path(img, disposition: "attachment") do %>
        <%= image_tag img, alt: "Download image" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>