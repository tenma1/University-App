<style>
.mainContainer
{
  font-family:Arial; 
  background: -webkit-linear-gradient(to right, #155799, #159957); 
  background: linear-gradient(to right, #155799, #159957); 
  color:whitesmoke;
}

.headingsContainer{
  text-align: center;
}

.new_registration
{
  width:35rem;
  margin: auto;
  color:whitesmoke;
  backdrop-filter: blur(16px) saturate(180%);
  -webkit-backdrop-filter: blur(16px) saturate(180%);
  background-color: rgba(11, 15, 13, 0.582);
  border-radius: 12px;
  border: 4px solid rgba(255, 255, 255, 0.125);
  padding: 20px 40px;
}

#login_link{
  background-color: rgba(255, 255, 255);
  border-radius: 5px;
  cursor: pointer;
  border-width: medium;
  align: center;
}

@media screen and (max-width: 600px) {
  .new_registration{
    width: 25rem;
  }
}

@media screen and (max-width: 400px) {
  .new_registration{
    width: 20rem;
  }
}
</style>


<div class="mainContainer">

  <div class="new_registration">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class='headingsContainer'>
        <h2>Sign up</h2>
      </div>


      <div class="role_field">
        <%= f.label :role_id %>
        <%= f.collection_select :role_id, Role.order(:name),:id,:name, include_blank: false %>
      </div>

      <div class="name_field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>

      <div class="email_field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="password_field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="password_conf_field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="age_field">
        <%= f.label :age %><br />
        <%= f.text_field :age %>
      </div><br>

      <div class="Institution">
        <%= f.label :institution_type, as: 'Institution Type' %>
        <%= f.select :institution_type, options_for_select(['College'], ['School']) %>
      </div><br>

      <div class="College_field">
        <%= f.label :college_id, as: 'College' %>
        <%= f.collection_select :college_id, College.all,:id,:name  %>
      </div><br/>

      <div class="School_field">
        <%= f.label :school_id, as: 'School' %>
        <%= f.collection_select :school_id, School.order(:name),:id,:name, default: '' %>
      </div><br/>

      <div class="Teacher_Student">
        <%= f.label :discipline %>
        <%= f.text_field :discipline %>
      </div><br>

      <div class="Teacher">
        <%= f.label :Subject %>
        <%= f.text_field :subject %>
      </div><br/>

      <div class="Student">
        <%= f.label :Standard %>
        <%= f.text_field :standard %>
      </div><br/>

      <div class="Student_Warden">
        <%= f.label :Hostel %>
        <%= f.collection_select :hostel_id, Hostel.order(:name),:id,:name, default: '' %><br>
      </div>


      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>

    <% end %>

    <button id="login_link">
      <%= render "users/shared/links" %>
    </button>

  </div>


</div>