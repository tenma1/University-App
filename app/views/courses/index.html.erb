<h1>Courses</h1>

<%= form_tag(courses_path, method: :get) do %>
  <p> Search for a Course </p>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search") %>
<% end %>

<table>
    <tr>
      <th><%= link_to 'Course Name', :sort => 'course_name' %></th>              
      <th>Course Code </th>
      <th><%= link_to 'Course Credit', sort: :course_credit%></th>
    </tr>

  <% @courses.each do |course| %>
    <tr>
      <td><a href="#"><%= course&.course_name %></a></td>
      <td><%= course&.course_code %></td>
      <td><%= course&.course_credit %></td>
    </tr>
  <% end %>
</table>
